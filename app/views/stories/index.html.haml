%h1 Listing Stories
%table.table
  %thead.black.white-text
    %tr
      %th{:scope => "col"} #
      %th{:scope => "col"} Country
      %th{:scope => "col"} City
      %th{:scope => "col"} Season
  %tbody
    - @stories.each do |story|
      %tr
        %th{:scope => "row"} 
          = story.id
        %td
          = story.dirty_country.name
        %td
          = story.city
        %td
          = story.weather_season

= link_to 'New Story', new_story_path, class: "btn btn-success", id:'new-story', data: { no_turbolink: true }
%br
= link_to 'Log out', destroy_user_session_path, method: 'DELETE'
